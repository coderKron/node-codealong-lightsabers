<div id="container">
  <h1>{{title}}</h1>
  <h2>Price: ${{price}}</h2>
  <p>
    {{text}}
  </p>
  {{#if imageFile}}
    <img class="photos" src="/images/{{imageFile}}" alt="{{title}}" />
  {{else}}
    <img
      class="photos"
      src="http://via.placeholder.com/640x360"
      alt="{{title}}"
    />
  {{/if}}
</div>

<div>
  {{#if stores}}
    <h4 style="color: white;">The product is available in the following stores</h4>
    <div class="row">
      <ul>
        {{#each stores}}
          <li class="stores">
            {{this}}
            <a class="links" href="#">More details!</a></li>
        {{/each}}
      </ul>
    </div>
  {{else}}
    <h3 style="color: red;">Currently not in stock</h3>
  {{/if}}
</div>